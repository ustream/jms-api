{
    "swagger": "2.0",
    "info": {
        "title": "JMS API",
        "description": "get data from a JMS server",
        "version": "1.0.0"
    },
    "host": "127.0.0.1:1337",
    "schemes": [
        "http"
    ],
    "basePath": "/api/v1",
    "produces": [
        "application/json"
    ],
    "paths": {
        "/module/list/{source}/{stage}": {
            "get": {
                "summary": "Get module names from the given source and stage",
                "parameters": [
                    {
                        "name": "source",
                        "in": "path",
                        "description": "Source id",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "stage",
                        "in": "path",
                        "description": "Version stage",
                        "required": true,
                        "type": "string"
                    }
                ],
                "tags": [
                    "Module"
                ],
                "responses": {
                    "200": {
                        "description": "Module object",
                        "schema": {
                            "type": "array",
                            "items": {
                                "type": "string",
                                "description": "Original module name"
                            }
                        }
                    },
                    "404": {
                        "description": "Not found",
                        "schema": {
                            "$ref": "#/definitions/Error"
                        }
                    },
                    "default": {
                        "description": "Unexpected error",
                        "schema": {
                            "$ref": "#/definitions/Error"
                        }
                    }
                }
            }
        },
        "/module/name/{source}/{stage}": {
            "get": {
                "summary": "Get module information of the latest available module version",
                "description": "Returns information of a module, that is handled by JMS\n",
                "parameters": [
                    {
                        "name": "source",
                        "in": "path",
                        "description": "Source id",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "stage",
                        "in": "path",
                        "description": "Version stage",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "module",
                        "in": "query",
                        "description": "Module name",
                        "required": true,
                        "type": "string",
                        "pattern": "([a-zA-Z0-9\\/,_]*)"
                    }
                ],
                "tags": [
                    "Module"
                ],
                "responses": {
                    "200": {
                        "description": "Module object",
                        "schema": {
                            "$ref": "#/definitions/Module"
                        }
                    },
                    "404": {
                        "description": "Not found",
                        "schema": {
                            "$ref": "#/definitions/Error"
                        }
                    },
                    "default": {
                        "description": "Unexpected error",
                        "schema": {
                            "$ref": "#/definitions/Error"
                        }
                    }
                }
            }
        },
        "/module/hash/{module}": {
            "get": {
                "summary": "Get module information of a module version according to its hash",
                "description": "Returns information of a module, that is handled by JMS\n",
                "parameters": [
                    {
                        "name": "module",
                        "in": "path",
                        "description": "Module hash",
                        "required": true,
                        "type": "string"
                    }
                ],
                "tags": [
                    "Module"
                ],
                "responses": {
                    "200": {
                        "description": "Module object",
                        "schema": {
                            "$ref": "#/definitions/Module"
                        }
                    },
                    "404": {
                        "description": "Not found",
                        "schema": {
                            "$ref": "#/definitions/Error"
                        }
                    },
                    "default": {
                        "description": "Unexpected error",
                        "schema": {
                            "$ref": "#/definitions/Error"
                        }
                    }
                }
            }
        },
        "/module/versions/{source}/{stage}": {
            "get": {
                "summary": "Get all stored module version hashes from the given source and stage",
                "parameters": [
                    {
                        "name": "source",
                        "in": "path",
                        "description": "Source id",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "name": "stage",
                        "in": "path",
                        "description": "Version stage",
                        "required": true,
                        "type": "string"
                    }
                ],
                "tags": [
                    "Module"
                ],
                "responses": {
                    "200": {
                        "description": "Module collection",
                        "schema": {
                            "$ref": "#/definitions/ModuleVersionCollection"
                        }
                    },
                    "404": {
                        "description": "Not found",
                        "schema": {
                            "$ref": "#/definitions/Error"
                        }
                    },
                    "default": {
                        "description": "Unexpected error",
                        "schema": {
                            "$ref": "#/definitions/Error"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "Module": {
            "properties": {
                "dependencies": {
                    "description": "List of immediate module dependencies",
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "module": {
                    "description": "Version-hashed module name",
                    "type": "string"
                },
                "mtime": {
                    "description": "Last modified time of module",
                    "type": "string",
                    "format": "date-time"
                },
                "originalModule": {
                    "description": "Original module name, relative to source basepath",
                    "type": "string"
                },
                "originalSource": {
                    "description": "Original module source code",
                    "type": "string"
                },
                "path": {
                    "type": "string"
                },
                "source": {
                    "type": "string"
                },
                "sourceMap": {
                    "type": "string"
                },
                "transitive_dependencies": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            }
        },
        "ModuleCollection": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/Module"
            }
        },
        "ModuleVersionCollection": {
            "type": "object",
            "additionalProperties": {
                "type": "array",
                "items": {
                    "type": "string"
                }
            }
        },
        "Error": {
            "properties": {
                "code": {
                    "type": "integer",
                    "format": "int32"
                },
                "message": {
                    "type": "string"
                },
                "fields": {
                    "type": "string"
                }
            }
        }
    }
}